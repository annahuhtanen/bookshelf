<div class="data-form">
    <form class="form-signin" action="/users/create" method="POST">
      <h2 class="form-signin-heading">Create a new user:</h2>
      <label for="inputFirstName">First Name</label><br>
      <input type="text" name="first" id="inputFirstName" class="form-control" placeholder="First" autofocus><br><br>
      <label for="inputLastName">Last Name</label><br>
      <input type="text" name="last" id="inputLastName" class="form-control" placeholder="Last"><br><br>
      <label for="inputPassword">Password</label><br>
      <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required><br><br>
      <label for="inputEmail">Email address</label><br>
      <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email address" required><br><br>
      <label for="inputZipCode">Zip Code</label><br>
      <input type="text" name="zipCode" id="inputZipCode" pattern="[0-9]{5}" class="form-control" placeholder="Zip Code" required><br>
      <br /><button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    </form>
  </div>